# =============================================================================
# CryptoJackal Environment Configuration
# =============================================================================
# This file contains all configuration parameters for the CryptoJackal bot
# Copy this file to .env and customize for your environment

# -----------------------------------------------------------------------------
# Node Configuration
# -----------------------------------------------------------------------------
NODE_URL=https://mainnet.infura.io/v3/your-project-id
CHAIN_ID=1
NETWORK_NAME=ethereum

# -----------------------------------------------------------------------------
# Trading Parameters
# -----------------------------------------------------------------------------
SCAN_INTERVAL=1000              # Milliseconds between market scans
GAS_LIMIT=300000                # Maximum gas to use per transaction
SLIPPAGE_TOLERANCE=0.005        # 0.5% slippage tolerance (as decimal)
MIN_LIQUIDITY=10.0              # Minimum liquidity in ETH
MAX_PRICE_IMPACT=0.02           # Maximum price impact (2% as decimal)
TRADE_AMOUNT=100000000000000000 # 0.1 ETH in wei

# -----------------------------------------------------------------------------
# Target Tokens (comma-separated addresses)
# -----------------------------------------------------------------------------
TARGET_TOKENS=0x...,0x...,0x...

# -----------------------------------------------------------------------------
# Web API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8080
API_BASE_URL=http://localhost:8080
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# -----------------------------------------------------------------------------
# Database Configuration (for user data, analytics)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://cryptojackal:password@localhost:5432/cryptojackal
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_TIMEOUT=3600            # 1 hour session timeout
MAX_LOGIN_ATTEMPTS=5

# -----------------------------------------------------------------------------
# Logging Configuration
# -----------------------------------------------------------------------------
LOG_LEVEL=info                  # debug, info, warn, error
LOG_FORMAT=json                 # json or pretty
LOG_FILE_ENABLED=true
LOG_FILE_PATH=/var/log/cryptojackal/app.log

# -----------------------------------------------------------------------------
# Monitoring & Metrics
# -----------------------------------------------------------------------------
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8081

# -----------------------------------------------------------------------------
# Paper Trading Configuration
# -----------------------------------------------------------------------------
PAPER_TRADING_MODE=false
PAPER_TRADING_BALANCE=10.0      # Starting balance in ETH for paper trading
PAPER_TRADING_DATA_SOURCE=historical # historical, live, simulation

# -----------------------------------------------------------------------------
# Token Discovery Configuration
# -----------------------------------------------------------------------------
DEXSCREENER_API_URL=https://api.dexscreener.com/latest/dex
COINGECKO_API_URL=https://api.coingecko.com/api/v3
DISCOVERY_SCAN_INTERVAL=30000   # 30 seconds
MAX_NEW_TOKENS_PER_SCAN=10
TOKEN_SECURITY_CHECK_ENABLED=true

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------
ENVIRONMENT=development          # development, staging, production
DEBUG_MODE=false
HOT_RELOAD=true
ENABLE_PROFILING=false

# -----------------------------------------------------------------------------
# External Service API Keys
# -----------------------------------------------------------------------------
# Optional: For enhanced features
COINGECKO_API_KEY=your-coingecko-api-key
DEXSCREENER_API_KEY=your-dexscreener-api-key
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
DISCORD_WEBHOOK_URL=your-discord-webhook-url 