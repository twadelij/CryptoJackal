# Node Configuration
NODE_URL=https://mainnet.infura.io/v3/your-project-id

# Wallet Configuration
PRIVATE_KEY=your-private-key-here

# Trading Parameters
SCAN_INTERVAL=1000  # Milliseconds between market scans
GAS_LIMIT=300000    # Maximum gas to use per transaction
SLIPPAGE_TOLERANCE=0.005  # 0.5% slippage tolerance
MIN_LIQUIDITY=10.0  # Minimum liquidity in ETH
MAX_PRICE_IMPACT=0.02  # Maximum price impact (2%)

# Target Tokens (comma-separated addresses)
TARGET_TOKENS=0x...,0x...,0x...

# Optional Parameters
LOG_LEVEL=info  # debug, info, warn, error
CHAIN_ID=1      # 1 for Ethereum mainnet 